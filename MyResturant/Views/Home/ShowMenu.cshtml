@{
}

@model List<Product>


<div id="restaurant-menu" class="text-center">
    <div class="container">
        <div class="section-title">
            <h2>Menu</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="menu-item">
                        <h3 class="menu-item-name">@item.Name</h3>
                        <img src="@item.Image" class="menu-item-img" alt="@item.Name">
                        <p class="menu-item-description">Ingredients: @item.Ingredients</p>
                        <p class="menu-itme-price">Price: @item.Price LE</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
