@model List<Product>

<div id="restaurant-menu" class="text-center">
    <div class="container">
        <div class="section-title">
            <h2>Menu</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="menu-item">
                        <h3 class="menu-item-name">@item.Name</h3>
                        <img src="@item.Image" class="menu-item-img" alt="@item.Name">
                        <p class="menu-item-description" style="margin-left:25px">Ingredients: @item.Ingredients</p>

                        <!-- Move the price after the description -->
                        <p class="menu-item-price" style="margin-top: 5px">Price: @item.Price LE</p>

                        <!-- Edit and Delete buttons -->
                        <div class="menu-item-actions">
                            <a asp-action="EditProduct" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="DeleteProduct" asp-controller="Admin"  asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Add New Product button -->
        <div class="add-new-product">
            <a asp-action="AddProduct" asp-controller="Admin" class="btn btn-success">Add New Product</a>
        </div>
    </div>
</div>
