@using MyResturant.ViewModels

@model User

<div class="container bootstrap snippets bootdeys">
    <div class="row">
        <div class="col-xs-12 col-sm-9">
            <form class="form-horizontal" asp-action="EditEmployee" asp-controller="Admin" method="post">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Employee info</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Name">Name</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Image">Image</label>
                            <div class="col-sm-10">
                                <input asp-for="Image" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="BirthDate">Birth Date</label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="BirthDate">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Email">E-mail address</label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" asp-for="Password">Password</label>
                            <div class="col-sm-10">
                                <input class="form-control" asp-for="Password">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-top:20px">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
