<!-- Features Section -->


@model List<Product>

<div id="features" class="text-center">
    <div class="container">
        <div class="section-title">
            <h2>Our Specials</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="features-item">
                        <h3>@item.Name</h3>
                        <img src="@item.Image" class="img-responsive" alt="">
                        <p>@item.Ingredients</p>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


